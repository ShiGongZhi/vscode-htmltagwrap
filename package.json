{
  "name": "html-tag-wrap-vscode",
  "version": "0.0.6",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShiGongZhi/vscode-htmltagwrap"
  },
  "description": "Wraps with HTML tags",
  "categories": [
    "Other"
  ],
  "keywords": [
    "wrap tags",
    "wrap html",
    "wrap code",
    "wrap text"
  ],
  "publisher": "SoulFriends",
  "engines": {
    "vscode": "^1.7.5"
  },
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.htmlTagWrap",
        "title": "Wrap in HTML Tags"
      }
    ],
    "keybindings": [
      {
        "command": "extension.htmlTagWrap",
        "key": "alt+w",
        "mac": "alt+w",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.htmlTagWrap",
        "key": "alt+d",
        "mac": "alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "editor.emmet.action.matchTag",
        "key": "shift+alt+d",
        "mac": "shift+alt+d"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Htmltagwrap configuration",
      "properties": {
        "htmltagwrap.tag": {
          "type": "string",
          "default": "div",
          "description": "The default HTML tag to insert when using htmltagwrap."
        },
        "htmltagwrap.needModifyTag": {
          "type": "boolean",
          "default": false,
          "description": "HTML tag can be quickly modified after using htmltagwrap.(Does not work with multi-line text)"
        },
        "htmltagwrap.needAddAttribute": {
          "type": "boolean",
          "default": false,
          "description": "Attribute can be quickly added after using htmltagwrap.(Does not work with multi-line text)"
        },
        "htmltagwrap.needFormatCode": {
          "type": "boolean",
          "default": false,
          "description": "Code will be formatted(editor.action.formatSelection) after using htmltagwrap."
        },
        "htmltagwrap.workWithMultiLineText": {
          "type": "boolean",
          "default": false,
          "description": "needModifyTag and needAddAttribute work with multi-line text.but code will be formatted(editor.action.formatSelection) after using htmltagwrap."
        }
      }
    }
  },
  "activationEvents": [
    "onCommand:extension.htmlTagWrap"
  ],
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "typings": "typings",
    "test:LinuxAndOSX": "node ./out/test/runTests.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "^16.11.7",
    "@types/mocha": "^10.0.1",
    "@types/vscode": "^1.7.5",
    "@vscode/test-electron": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "chai": "^4.3.7",
    "fs-extra": "^11.1.1",
    "glob": "^7.1.1",
    "mocha": "^10.2.0",
    "eslint": "^8.36.0",
    "source-map-support": "0.5.21",
    "typescript": "^5.0.2"
  },
  "icon": "images/htmlTagWrap_icon.png",
  "galleryBanner": {
    "color": "#596877",
    "theme": "dark"
  }
}
